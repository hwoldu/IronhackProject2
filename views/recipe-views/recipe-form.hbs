<h2>Add a Recipe</h2>

<form class="add-recipe" action="process-recipe" method="POST">
  <label class="form">
    Title
    <input class="form-input" type="text" name="title" placeholder="Apple pie">
  </label>

  <label class="form">
    Image
    <input class="form-input" type="text" name="image" placeholder="www.image-example.com">
  </label>

<label class="form">Level</label>
  <select class="form-input" name="level">
    <option value="easy">Easy</option>
    <option value="medium">Medium</option>
    <option value="difficult">Difficult</option>
  </select>

  <label class="form">
    Duration
    <input class="form-input" type="text" name="duration" placeholder="30 min">
  </label>

  <label class="form">
    Ingredients
    <input class="form-input" type="text" name="ingredients" placeholder="flour">
    <input type="button" value="+" class="add" Id="content" onclick="">

  </label>

  <label class="form">
    Description
    <input class="form-input" type="text" name="description" placeholder="Put the flour in a jar">
  </label>

<label class="form">Season</label>
  <select class="form-input" name="season">
    <option value="summer">Summer</option>
    <option value="autumn">Autumn</option>
    <option value="winter">Winter</option>
    <option value="spring">Spring</option>
  </select>

  <button>Save This Recipe</button>
</form>